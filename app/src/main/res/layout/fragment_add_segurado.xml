<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:scrollbars="vertical">

            <EditText
                android:id="@+id/seguradoNomeEditText"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="100dp"
                android:drawableStart="@drawable/ic_account_pessoa_24dp"
                android:hint=" Nome" />

            <EditText
                android:id="@+id/seguradoEmailEditText"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:hint=" Email"
                android:drawableStart="@drawable/ic_account_email_24dp" />

            <EditText
                android:id="@+id/seguradoTelCelularEditText"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_account_cellphone_24dp"
                android:hint=" Celular"
                android:inputType="phone" />

            <EditText
                android:id="@+id/seguradoTelOutroEditText"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_account_phone_24dp"
                android:hint=" Telefone"
                android:inputType="phone" />

            <Button
                android:id="@+id/cadastraSeguradoButton"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:text="Confirmar"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:background="@drawable/toolbar_rounded_corners"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>